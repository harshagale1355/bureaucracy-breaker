{
  "manifest_version": 3,
  "name": "Bureaucracy Breaker",
  "version": "1.0.0",
  "description": "Transform government PDF forms into conversational experiences",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "http://localhost:8004/*",
    "http://localhost:8005/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Bureaucracy Breaker"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}